<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotwire JS Dashboard</title>
    <link rel="stylesheet" href="/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/@hotwired/turbo@7.3.0/dist/turbo.es2017-umd.js"></script>
  </head>
  <body class="bg-gray-100">
    <div id="app" class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Dashboard</h1>
      <div id="people-list" class="flex space-x-2 mb-4">
        <% people.forEach(person => { %>
        <a
          href="/person/<%= person.id %>"
          class="bg-blue-500 text-white px-3 py-1 rounded"
          data-turbo-frame="person-data"
        >
          <%= person.name %>
        </a>
        <% }); %>
      </div>
      <turbo-frame id="person-data" data-turbo-action="advance">
        <% if (selectedPerson) { %> <%- include('person', { person:
        selectedPerson }) %> <% } else { %>
        <p>Select a person to view their data.</p>
        <% } %>
      </turbo-frame>
    </div>
    <script src="/app.js"></script>
  </body>
</html>
